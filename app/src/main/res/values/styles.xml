<resources>

    <style name="CustomActionBarTheme" parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
        <item name="android:actionOverflowButtonStyle">@style/MenuIcon</item>
    </style>


    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>


    <!-- ActionBar styles -->
    <style name="MyActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <!--
                <item name="android:background">@drawable/plashka</item>
        -->
        <item name="android:logo">@android:color/transparent</item>
        <item name="android:titleTextStyle">@style/CustomActionBarTheme.ActionBar.Text</item>
    </style>

    <!-- ActionBar title text -->
    <style name="CustomActionBarTheme.ActionBar.Text" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/bg_color</item>
        <item name="android:textSize">19dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="MenuIcon" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="CustomRatingBarB" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_b</item>
        <item name="android:minHeight">25dip</item>
         <item name="android:maxHeight">25dip</item>
    </style>

    <style name="CustomRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
    </style>
    <style name="CustomRatingBarR" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_ratingbar_r</item>
        <item name="android:minHeight">10dip</item>
        <item name="android:maxHeight">10dip</item>
    </style>

</resources>
