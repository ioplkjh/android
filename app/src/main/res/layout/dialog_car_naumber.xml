<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:padding="10dp">

    <TextView
        android:layout_width="match_parent"
        android:textColor="#666666"
        android:layout_height="wrap_content"
        android:text="Государственный номер"
        android:textSize="20dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:background="#666666"/>

    <TextView
        android:layout_width="match_parent"
        android:textColor="#666666"
        android:layout_height="wrap_content"
        android:text="Это последний шаг- укажите, пожалуйста, регистрационный номер автомобиля, чтобы администратор мог идентифицировать Вас"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/eCarNumber"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp"
        android:textColor="#666666"
        android:background="@drawable/round_edittext_reg"
        android:hint="гос номер"
        android:maxLines="1"
        android:textAllCaps="true"
        android:padding="10dp"
        android:singleLine="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="15dp"
        android:gravity="right"
        android:orientation="horizontal">

        <ru.allmoyki.widget.state.StateTextView
            android:id="@+id/btnCancelNumver"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="Я не хочу"
            android:textColor="@color/btn_color_get_code"
            android:textSize="15dp" />

        <ru.allmoyki.widget.state.StateTextView
            android:id="@+id/btnApplyNumber"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"

            android:gravity="center"
            android:text="Готово"
            android:textColor="@color/btn_color_get_code"
            android:textSize="15dp" />

    </LinearLayout>

</LinearLayout>